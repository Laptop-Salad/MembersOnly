extends layout

block content
    if user 
        div(class="w-100 h-100 d-flex justify-content-center align-items-center")
            div(class="w-25 h-50 bg-light rounded-1 d-flex flex-column align-items-center")
                h1 New Post
                form(method="POST" action="/new-post" class="d-flex flex-column align-items-center")
                    input(class="m-4 rounded-1 border-0" name="title" type="text" minlength="1" maxlength="20" placeholder="Give your message a title" required) 
                    input(class="m-1 rounded-1 border-0" name="text" type="text" minlength="1" maxlength="200" placeholder="Write your text here!" required)
                    input(class="m-1 rounded-1 border-0" type="submit" value="Post")
    else 
        h1(class="text-light") Please log in to post a message
